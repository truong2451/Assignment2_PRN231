@model IEnumerable<TrinhHuuTruong.eBookStore.Repositories.Entity_Model.Publisher>
@{
    ViewData["Title"] = "View Publisher";
}

<h1>Publisher</h1>

<p>
    <a asp-action="CreatePublisher" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Publisher Name</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>

                    <a asp-action="EditPublisher" asp-route-id="@item.PublisherId" class="btn btn-success">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.PublisherId" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
