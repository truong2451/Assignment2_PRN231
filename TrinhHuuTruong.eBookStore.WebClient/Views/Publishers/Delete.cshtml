@model TrinhHuuTruong.eBookStore.Repositories.Entity_Model.Publisher
@{
    ViewData["Title"] = "Delete Publisher";
}

<h1>Delete Publisher</h1>

<div>
    <h4>Publisher Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Publisher Name:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PublisherName)</dd>

        <dt class="col-sm-2">City:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>

        <dt class="col-sm-2">State:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.State)</dd>

        <dt class="col-sm-2">Country:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Country)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PublisherId" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this product?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="ViewPublisher" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>